<Window x:Class="PhotosCategorier.SetSizeWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PhotosCategorier"
        xmlns:loc="clr-namespace:PhotosCategorier.Properties"
        mc:Ignorable="d"
        Title="{x:Static loc:Resources.SettingWindowSize}" Width="300" Height="150"
        ResizeMode="NoResize">
    <StackPanel Margin="0,20,0,0">
        <StackPanel Orientation="Horizontal" Margin="5" HorizontalAlignment="Center">
            <Label Content="{x:Static loc:Resources.WindowSize}" HorizontalAlignment="Center" Margin="0,0,20,0"></Label>
            <ComboBox Name="SizeSelcet" MinWidth="150">
            </ComboBox>
        </StackPanel>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
            <Button Content="{x:Static loc:Resources.Cancel}" Margin="0,10,25,10" MinWidth="80" MinHeight="30" Click="Cancel_Click"></Button>
            <Button Content="{x:Static loc:Resources.OK}" Margin="25,10,0,10" MinWidth="80" MinHeight="30" IsDefault="True" Click="OK_Click"></Button>
        </StackPanel>
    </StackPanel>
</Window>
