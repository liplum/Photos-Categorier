<UserControl x:Class="PhotosCategorier.Main.SettingSelect"
             x:Name="Setting"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PhotosCategorier.Main"
             xmlns:loc="clr-namespace:PhotosCategorier.Properties"
             mc:Ignorable="d" >

    <StackPanel Margin="0,20,0,0">
        <StackPanel Orientation="Horizontal" Margin="5" HorizontalAlignment="Center">
            <Label Name="SettingLabel" Content="{Binding LabelContent , ElementName=Setting}" HorizontalAlignment="Center" Margin="0,0,20,0"></Label>
            <ComboBox Name="Combo" MinWidth="150">
            </ComboBox>
        </StackPanel>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
            <Button Content="{x:Static loc:Resources.Cancel}" Margin="0,10,25,10" MinWidth="80" MinHeight="30"></Button>
            <Button Content="{x:Static loc:Resources.OK}" Margin="25,10,0,10" MinWidth="80" MinHeight="30" IsDefault="True"></Button>
        </StackPanel>
    </StackPanel>

</UserControl>
